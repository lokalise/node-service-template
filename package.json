{
    "name": "node-service-template",
    "version": "1.0.0",
    "engines": {
        "node": ">=22.10.0"
    },
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "copy:config": "cpy --rename=.env ./.env.default ./",
        "test": "vitest",
        "test:migrate": "cross-env NODE_ENV=test DATABASE_URL=postgres://serviceuser:pass@localhost:5432/service_db_test npx drizzle-kit migrate --config=./src/db/drizzle.config.ts",
        "test:coverage": "node --run test -- --coverage",
        "test:ci": "node --run copy:config && node --run test:migrate && node --run test:coverage",
        "lint": "biome check . && tsc",
        "lint:fix": "biome check --write .",
        "start:dev": "cross-env NODE_ENV=development tsx --env-file=.env src/server.ts",
        "start:dev:watch": "cross-env NODE_ENV=development tsx watch --env-file=.env src/server.ts",
        "start:prod": "tsc && cross-env NODE_ENV=production node --env-file-if-exists=.env dist/src/server.js",
        "start:prod:newrelic": "tsc && cross-env NODE_ENV=production node --experimental-loader newrelic/esm-loader.mjs -r newrelic --env-file-if-exists=.env dist/src/server.js",
        "free-ports": "npx cross-port-killer 3000",
        "docker:start:dev": "docker compose up -d",
        "docker:stop:dev": "docker compose down",
        "db:start:dev": "docker compose up -d postgres redis",
        "db:stop:dev": "docker compose down",
        "db:generate-migrations": "cross-env NODE_ENV=development npx drizzle-kit generate --config=./src/db/drizzle.config.ts",
        "db:apply-migrations": "cross-env NODE_ENV=development npx drizzle-kit migrate --config=./src/db/drizzle.config.ts",
        "db:drop-migrations": "cross-env NODE_ENV=development npx drizzle-kit drop --config=./src/db/drizzle.config.ts",
        "db:wait": "while ! bash -c \"echo > /dev/tcp/127.0.0.1/5432\"; do sleep 1; done",
        "spec:generate": "cross-env NODE_ENV=development tsx --env-file=.env scripts/generateOpenApi.ts && node --run spec:validate",
        "spec:validate": "cross-env NODE_ENV=development tsx --env-file=.env scripts/validateOpenApi.ts",
        "docs:validate": "cross-env NODE_ENV=development tsx scripts/validateEnvVarDoc.ts",
        "prepublishOnly": "node --run build",
        "jwt:generate": "cross-env NODE_ENV=development tsx scripts/generateJwt.ts",
        "cmd:getUserImportJobs:dev": "cross-env NODE_ENV=development tsx --env-file=.env scripts/cmd/getUserImportJobs.ts",
        "cmd:getUserImportJobs:prod": "node --env-file-if-exists=.env scripts/cmd/getUserImportJobs.js"
    },
    "dependencies": {
        "@aws-sdk/client-sns": "^3.787.0",
        "@aws-sdk/client-sqs": "^3.787.0",
        "@aws-sdk/credential-providers": "^3.787.0",
        "@fastify/auth": "^5.0.2",
        "@fastify/awilix": "^7.0.0",
        "@fastify/cors": "^11.0.1",
        "@fastify/helmet": "^13.0.1",
        "@fastify/jwt": "^9.1.0",
        "@fastify/schedule": "^6.0.0",
        "@fastify/swagger": "^9.5.0",
        "@lokalise/api-contracts": "^4.3.0",
        "@lokalise/backend-http-client": "^5.0.0",
        "@lokalise/background-jobs-common": "^12.2.0",
        "@lokalise/fastify-api-contracts": "^2.0.2",
        "@lokalise/fastify-extras": "^27.3.0",
        "@lokalise/healthcheck-utils": "^2.0.0",
        "@lokalise/id-utils": "^3.0.0",
        "@lokalise/node-core": "^13.6.0",
        "@lokalise/universal-ts-utils": "^4.4.1",
        "@lokalise/zod-extras": "^2.1.0",
        "@message-queue-toolkit/amqp": "^20.0.0",
        "@message-queue-toolkit/core": "^20.0.0",
        "@message-queue-toolkit/schemas": "^5.0.0",
        "@message-queue-toolkit/sns": "^21.0.0",
        "@message-queue-toolkit/sqs": "^20.0.0",
        "@message-queue-toolkit/metrics": "^3.0.0",
        "@scalar/fastify-api-reference": "^1.28.19",
        "@supercharge/promise-pool": "^3.2.0",
        "amqplib": "^0.10.7",
        "awilix": "^12.0.5",
        "awilix-manager": "^6.1.0",
        "bullmq": "^5.48.1",
        "drizzle-orm": "^0.41.0",
        "drizzle-zod": "^0.7.1",
        "fastify": "^5.3.0",
        "fastify-graceful-shutdown": "^4.0.1",
        "fastify-metrics": "^12.1.0",
        "fastify-no-icon": "^7.0.0",
        "fastify-type-provider-zod": "^4.0.2",
        "ioredis": "^5.6.1",
        "jsonwebtoken": "^9.0.2",
        "layered-loader": "^14.0.1",
        "newrelic": "12.17.0",
        "opinionated-machine": "^2.8.0",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "postgres": "^3.4.5",
        "prom-client": "^15.1.3",
        "redis-semaphore": "^5.6.2",
        "toad-scheduler": "^3.0.1",
        "undici": "^7.8.0",
        "validation-utils": "11.0.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@amplitude/analytics-types": "^2.9.1",
        "@biomejs/biome": "1.9.4",
        "@lokalise/biome-config": "^1.6.1",
        "@lokalise/tsconfig": "^1.2.0",
        "@lokalise/universal-testing-utils": "^1.1.0",
        "@types/amqplib": "^0.10.7",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/newrelic": "^9.14.8",
        "@types/node": "^22.14.1",
        "@vitest/coverage-v8": "^3.1.1",
        "cpy-cli": "^5.0.0",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.30.6",
        "mockttp": "^3.17.0",
        "oas-validator": "^5.0.8",
        "tsx": "^4.19.3",
        "typescript": "5.8.3",
        "vitest": "^3.1.1",
        "yaml": "^2.7.1"
    }
}
