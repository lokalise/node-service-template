{
    "name": "node-service-template",
    "version": "1.2.1",
    "engines": {
        "node": ">=24.5.0"
    },
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "copy:config": "cpy --rename=.env ./.env.default ./",
        "test": "vitest",
        "test:migrate": "cross-env NODE_ENV=test DATABASE_URL=postgres://serviceuser:pass@localhost:5432/service_db_test npx drizzle-kit migrate --config=./src/db/drizzle.config.ts",
        "test:coverage": "node --run test -- --coverage",
        "test:ci": "node --run copy:config && node --run test:migrate && node --run test:coverage",
        "lint": "biome check . && tsc",
        "lint:fix": "biome check --write .",
        "start:dev": "node --env-file=.env src/server.ts",
        "start:dev:watch": "node --watch --env-file=.env src/server.ts",
        "start:prod": "node --run build && cross-env NODE_ENV=production node --env-file-if-exists=.env dist/server.js",
        "start:prod:newrelic": "node --run build && cross-env NODE_ENV=production node --experimental-loader newrelic/esm-loader.mjs -r newrelic --env-file-if-exists=.env dist/server.js",
        "start:prod:smoke-test": "sh -c 'npm run start:prod > .smoke.log 2>&1 & APP_PID=$!; trap \"kill $APP_PID 2>/dev/null\" EXIT INT TERM; for i in $(seq 1 30); do curl -fsS http://localhost:3000/health >/dev/null 2>&1 && echo \"Health check passed\" && exit 0 || sleep 1; done; echo \"Timeout: Health check failed after 30 seconds\"; tail -n +1 .smoke.log || true; exit 1'",
        "free-ports": "npx cross-port-killer 3000",
        "docker:start:dev": "docker compose up -d --quiet-pull --wait",
        "docker:stop:dev": "docker compose down",
        "db:generate-migrations": "cross-env NODE_ENV=development npx drizzle-kit generate --config=./src/db/drizzle.config.ts",
        "db:apply-migrations": "cross-env NODE_ENV=development npx drizzle-kit migrate --config=./src/db/drizzle.config.ts",
        "db:drop-migrations": "cross-env NODE_ENV=development npx drizzle-kit drop --config=./src/db/drizzle.config.ts",
        "spec:generate": "node --env-file-if-exists=.env  scripts/generateOpenApi.ts && node --run spec:validate",
        "spec:validate": "node --env-file-if-exists=.env  scripts/validateOpenApi.ts",
        "docs:validate": "node --env-file-if-exists=.env  scripts/validateEnvVarDoc.ts",
        "prepublishOnly": "node --run build",
        "jwt:generate": "node --env-file-if-exists=.env scripts/generateJwt.ts",
        "cmd:getUserImportJobs": "node --env-file-if-exists=.env scripts/cmd/getUserImportJobs.ts"
    },
    "dependencies": {
        "@aws-sdk/client-sns": "^3.962.0",
        "@aws-sdk/client-sqs": "^3.962.0",
        "@aws-sdk/credential-providers": "^3.962.0",
        "@fastify/auth": "^5.0.4",
        "@fastify/awilix": "^8.2.0",
        "@fastify/cors": "^11.2.0",
        "@fastify/helmet": "^13.0.2",
        "@fastify/jwt": "^10.0.0",
        "@fastify/otel": "^0.16.0",
        "@fastify/schedule": "^6.0.0",
        "@fastify/swagger": "^9.6.1",
        "@lokalise/api-contracts": "^6.1.0",
        "@lokalise/backend-http-client": "^10.0.1",
        "@lokalise/background-jobs-common": "^14.2.0",
        "@lokalise/fastify-api-contracts": "^5.0.0",
        "@lokalise/fastify-extras": "^30.2.1",
        "@lokalise/healthcheck-utils": "^6.0.0",
        "@lokalise/id-utils": "^3.0.1",
        "@lokalise/node-core": "^14.6.1",
        "@lokalise/universal-ts-utils": "^4.8.0",
        "@lokalise/zod-extras": "^3.0.0",
        "@message-queue-toolkit/amqp": "^23.0.0",
        "@message-queue-toolkit/core": "^25.2.0",
        "@message-queue-toolkit/metrics": "^4.1.1",
        "@message-queue-toolkit/schemas": "^7.1.0",
        "@message-queue-toolkit/sns": "^24.4.1",
        "@message-queue-toolkit/sqs": "^24.1.1",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.67.3",
        "@opentelemetry/exporter-trace-otlp-grpc": "^0.208.0",
        "@opentelemetry/sdk-node": "^0.208.0",
        "@scalar/fastify-api-reference": "^1.40.9",
        "@supercharge/promise-pool": "^3.2.0",
        "amqplib": "^0.10.9",
        "awilix": "^12.0.5",
        "awilix-manager": "^6.3.0",
        "bullmq": "^5.66.4",
        "drizzle-kit": "^0.31.8",
        "drizzle-orm": "^0.45.1",
        "drizzle-zod": "^0.8.3",
        "fastify": "^5.6.2",
        "fastify-graceful-shutdown": "^5.0.0",
        "fastify-metrics": "^12.1.0",
        "fastify-no-icon": "^7.0.0",
        "fastify-type-provider-zod": "^6.1.0",
        "ioredis": "^5.8.2",
        "jsonwebtoken": "^9.0.3",
        "layered-loader": "^14.2.2",
        "newrelic": "13.8.1",
        "opinionated-machine": "^5.1.0",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "postgres": "^3.4.7",
        "prom-client": "^15.1.3",
        "redis-semaphore": "^5.6.2",
        "toad-scheduler": "^3.1.0",
        "undici": "^7.16.0",
        "validation-utils": "11.0.1",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@amplitude/analytics-types": "^2.11.0",
        "@biomejs/biome": "2.3.11",
        "@lokalise/biome-config": "^3.1.1",
        "@lokalise/tsconfig": "^3.1.0",
        "@lokalise/universal-testing-utils": "^3.0.0",
        "@opentelemetry/sdk-trace-node": "^2.2.0",
        "@readme/openapi-parser": "^5.4.0",
        "@types/amqplib": "^0.10.8",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/newrelic": "^9.14.8",
        "@types/node": "^25.0.6",
        "@vitest/coverage-v8": "^4.0.16",
        "cpy-cli": "^6.0.0",
        "cross-env": "^10.1.0",
        "mockttp": "^4.2.1",
        "typescript": "5.9.3",
        "vitest": "^4.0.15",
        "yaml": "^2.8.2"
    }
}
