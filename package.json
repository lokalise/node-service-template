{
    "name": "node-service-template",
    "version": "1.5.0",
    "engines": {
        "node": ">=24.5.0"
    },
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "copy:config": "cpy --rename=.env ./.env.default ./",
        "test": "vitest",
        "test:migrate": "cross-env NODE_ENV=test DATABASE_URL=postgres://serviceuser:pass@localhost:5432/service_db_test npx drizzle-kit migrate --config=./src/db/drizzle.config.ts",
        "test:coverage": "node --run test -- --coverage",
        "test:ci": "node --run copy:config && node --run test:migrate && node --run test:coverage",
        "lint": "biome check . && tsc && npm run docs:validate",
        "lint:fix": "biome check --write .",
        "start:dev": "node --env-file=.env src/server.ts",
        "start:dev:watch": "node --watch --env-file=.env src/server.ts",
        "start:prod": "node --run build && cross-env NODE_ENV=production node --env-file-if-exists=.env dist/server.js",
        "start:prod:opentelemetry": "node --run build && cross-env NODE_ENV=production node --import=@opentelemetry/instrumentation/hook.mjs --env-file-if-exists=.env dist/server.js",
        "start:prod:smoke-test": "sh -c 'npm run start:prod > .smoke.log 2>&1 & APP_PID=$!; trap \"kill $APP_PID 2>/dev/null\" EXIT INT TERM; for i in $(seq 1 30); do curl -fsS http://localhost:3000/health >/dev/null 2>&1 && echo \"Health check passed\" && exit 0 || sleep 1; done; echo \"Timeout: Health check failed after 30 seconds\"; tail -n +1 .smoke.log || true; exit 1'",
        "free-ports": "npx cross-port-killer 3000",
        "docker:start:dev": "docker compose up -d --quiet-pull --wait",
        "docker:stop:dev": "docker compose down",
        "db:generate-migrations": "cross-env NODE_ENV=development npx drizzle-kit generate --config=./src/db/drizzle.config.ts",
        "db:apply-migrations": "cross-env NODE_ENV=development npx drizzle-kit migrate --config=./src/db/drizzle.config.ts",
        "db:drop-migrations": "cross-env NODE_ENV=development npx drizzle-kit drop --config=./src/db/drizzle.config.ts",
        "spec:generate": "node --env-file-if-exists=.env  scripts/generateOpenApi.ts",
        "docs:generate": "envase generate ./src/infrastructure/config.ts -o ./docs/environment-variables.md",
        "docs:validate": "envase validate ./src/infrastructure/config.ts ./docs/environment-variables.md",
        "prepublishOnly": "node --run build",
        "jwt:generate": "node --env-file-if-exists=.env scripts/generateJwt.ts",
        "cmd:getUserImportJobs": "node --env-file-if-exists=.env scripts/cmd/getUserImportJobs.ts"
    },
    "dependencies": {
        "@aws-sdk/client-sns": "^3.995.0",
        "@aws-sdk/client-sqs": "^3.995.0",
        "@aws-sdk/client-sts": "^3.995.0",
        "@aws-sdk/credential-providers": "^3.995.0",
        "@fastify/auth": "^5.0.4",
        "@fastify/awilix": "^8.2.0",
        "@fastify/cors": "^11.2.0",
        "@fastify/helmet": "^13.0.2",
        "@fastify/jwt": "^10.0.0",
        "@fastify/otel": "^0.16.0",
        "@fastify/schedule": "^6.0.0",
        "@fastify/swagger": "^9.7.0",
        "@lokalise/api-contracts": "^6.5.3",
        "@lokalise/aws-config": "^7.1.0",
        "@lokalise/backend-http-client": "^10.1.0",
        "@lokalise/background-jobs-common": "^14.2.1",
        "@lokalise/fastify-api-contracts": "^5.3.0",
        "@lokalise/fastify-extras": "^30.7.0",
        "@lokalise/healthcheck-utils": "^6.0.0",
        "@lokalise/id-utils": "^3.0.1",
        "@lokalise/node-core": "^14.7.4",
        "@lokalise/opentelemetry-fastify-bootstrap": "^2.1.1",
        "@lokalise/universal-ts-utils": "^4.10.0",
        "@lokalise/zod-extras": "^3.0.1",
        "@message-queue-toolkit/amqp": "^23.1.0",
        "@message-queue-toolkit/core": "^25.3.0",
        "@message-queue-toolkit/metrics": "^4.1.1",
        "@message-queue-toolkit/schemas": "^7.1.0",
        "@message-queue-toolkit/sns": "^24.6.0",
        "@message-queue-toolkit/sqs": "^24.2.1",
        "@opentelemetry/auto-instrumentations-node": "^0.70.0",
        "@opentelemetry/exporter-trace-otlp-grpc": "^0.210.0",
        "@scalar/fastify-api-reference": "^1.44.25",
        "amqplib": "^0.10.9",
        "awilix": "^13.0.0",
        "awilix-manager": "^6.3.0",
        "bullmq": "^5.70.0",
        "drizzle-kit": "1.0.0-beta.15-859cf75",
        "drizzle-orm": "1.0.0-beta.15-859cf75",
        "drizzle-zod": "1.0.0-beta.14-56703c9",
        "envase": "^1.3.0",
        "fastify": "^5.7.4",
        "fastify-graceful-shutdown": "^5.0.0",
        "fastify-metrics": "^12.1.0",
        "fastify-no-icon": "^7.0.0",
        "fastify-type-provider-zod": "^6.1.0",
        "ioredis": "^5.9.3",
        "layered-loader": "^14.2.3",
        "opinionated-machine": "^6.10.1",
        "pino": "^10.3.1",
        "pino-pretty": "^13.1.3",
        "postgres": "^3.4.8",
        "prom-client": "^15.1.3",
        "redis-semaphore": "^5.6.2",
        "toad-scheduler": "^3.1.0",
        "undici": "^7.22.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@amplitude/analytics-types": "^2.11.1",
        "@biomejs/biome": "2.4.2",
        "@lokalise/biome-config": "^3.1.1",
        "@lokalise/tsconfig": "^3.1.0",
        "@lokalise/universal-testing-utils": "^3.1.0",
        "@readme/openapi-parser": "^5.5.0",
        "@types/amqplib": "^0.10.8",
        "@types/node": "^25.3.0",
        "@vitest/coverage-v8": "^4.0.18",
        "cpy-cli": "^7.0.0",
        "cross-env": "^10.1.0",
        "fauxqs": "^1.11.0",
        "mockttp": "^4.2.1",
        "typescript": "5.9.3",
        "vitest": "^4.0.18",
        "yaml": "^2.8.2"
    },
    "optionalDependencies": {
        "@biomejs/cli-darwin-arm64": "^2.3.15",
        "@biomejs/cli-linux-arm64": "^2.3.15",
        "@biomejs/cli-linux-x64": "^2.3.15",
        "@biomejs/cli-win32-x64": "^2.3.15",
        "@esbuild/darwin-arm64": "^0.27.3",
        "@esbuild/linux-arm64": "^0.27.3",
        "@esbuild/linux-x64": "^0.27.3",
        "@esbuild/win32-x64": "^0.27.3",
        "@rollup/rollup-darwin-arm64": "^4.57.1",
        "@rollup/rollup-linux-arm64-gnu": "^4.57.1",
        "@rollup/rollup-linux-x64-gnu": "^4.57.1",
        "@rollup/rollup-win32-x64-msvc": "^4.57.1"
    }
}
